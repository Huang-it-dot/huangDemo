<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.huang.Mapper.UserMapper">
 <select id="selectUser" parameterType="string" resultType="com.huang.Model.User">
  SELECT * from public.users where user_id = #{userId} and pwd = #{pwd}
 </select>
   <select id="selectAllUser"  resultType="com.huang.Model.User">
  SELECT * from  public.users 
 </select>
  <select id="selectUserCount" parameterType="string" resultType="int">
  SELECT COUNT(*) from  public.users where user_id = #{userId}
 </select>
</mapper>