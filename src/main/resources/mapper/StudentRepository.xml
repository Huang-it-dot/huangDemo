<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.huang.Mapper.StudentRepository">
	<select id="findAll" resultType="com.huang.Model.Student">
		SELECT * FROM public.student;
	</select>

	<insert id="save" parameterType="com.huang.Model.Student"
		useGeneratedKeys="true" keyProperty="id">
		INSERT INTO public.student (age, email, name)
		VALUES (#{age}, #{email}, #{name})
		ON CONFLICT (id) DO NOTHING
		RETURNING id;
	</insert>
	<!-- <delete id="deleteUser" parameterType="String"> DELETE FROM public.users 
		WHERE id = #{userId}; </delete> -->

	<select id="getStudentById" parameterType="Long"
		resultType="com.huang.Model.Student">
		SELECT * from public.student;
	</select>

</mapper>